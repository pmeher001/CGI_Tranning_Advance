package com.Spring_Boot_RestAPI_PMS_Using_SpringData;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication(scanBasePackages = "com")  // Enable @Restcontroller, @Service, @Repository annotation 
@EntityScan(basePackages = "com.bean")   // enable @Entity annotation 
@EnableJpaRepositories(basePackages = "com.repository")  // Enable Spring JPA Data features 
public class SpringBootRestApiPmsUsingSpringDataApplication {

	public static void main(String[] args) {
		SpringApplication.run(SpringBootRestApiPmsUsingSpringDataApplication.class, args);
	}

}
